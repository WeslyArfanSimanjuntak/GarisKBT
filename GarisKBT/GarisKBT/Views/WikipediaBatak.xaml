<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarisKBT.Views.WikipediaBatak">
    <ContentPage.Content>
        <StackLayout>
            <WebView VerticalOptions="FillAndExpand"
        HorizontalOptions="FillAndExpand"
        Source="https://id.wikipedia.org/wiki/Suku_Batak"
        WidthRequest="500"
        HeightRequest="1000"
        IsVisible="true" x:Name="WebView" />
            <Frame Padding="10,10,10,10" Margin="10" 
                        CornerRadius="5">
                <StackLayout>

                   
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Clicked="BackButton_Clicked" x:Name="BackButton" Text="&lt; Kembali"></Button>
                        <Button Clicked="NextButton_Clicked" Grid.Column="1" x:Name="NextButton" Text="Berikutnya >"></Button>
                    </Grid>
                    
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>